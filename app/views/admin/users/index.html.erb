<% provide :title, t("users_maneger") %>
<div class="container">
<h1 style="text-align: center;"><%= t "users_maneger" %></h1>
  <%= link_to t("add_user"), "#", class: "btn btn-sm btn-primary btn-create" %>
  <table class="table table-striped table_user">
    <thead>
      <tr>
        <th><%= t "id" %></th>
        <th><%= t "name" %></th>
        <th><%= t "email" %></th>
        <th><%= t "address" %></th>
        <th><%= t "phone" %></th>
        <th><%= t "actions" %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.address %></td>
          <td><%= user.phone %></td>
          <td>
            <a data-toggle="modal" data-target="#<%= user.id %>" class="btn btn-primary">
              <span class="glyphicon glyphicon-pencil"></span>
            </a>
            <a class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate %>
</div>
