<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title"><%= t "update_reviiew" %></h4>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="">
          <%= form_for @review, url: review_path do |f| %>
    <div class="row">
    <div class="col-md-1"></div>
      <div class="col-md-10">
        <div class="form-group">
          <%= f.hidden_field :book_id, value: @book.id %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.text_field :review_title, class: "form-control", placeholder: "Title..."%>
          <%=f.text_area :review_content, class: "form-control r_textarea", placeholder: "Review..." %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-11">
        <%= f.submit t("update"), class: "btn main-btn pull-right" %>
      </div>
    </div>
  <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
