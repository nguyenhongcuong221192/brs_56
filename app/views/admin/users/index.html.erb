<% provide :title, t("users_manager") %>
<div class="container">
  <h1><%= t "users_manager" %></h1>
  <% if current_user.admin? %>
    <%= link_to t("add_user"), "#", class: "btn btn-sm btn-primary btn-create" %>
  <% end %>
  <table class="table table-striped table_user">
    <thead>
      <tr>
        <th><%= t "id" %></th>
        <th><%= t "name" %></th>
        <th><%= t "email" %></th>
        <th><%= t "address" %></th>
        <th><%= t "phone" %></th>
        <% if current_user.admin? %>
          <th><%= t "actions" %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "list_users", collection: @users, as: :user %>
    </tbody>
  </table>
  <%= will_paginate %>
</div>
