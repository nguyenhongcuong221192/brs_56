<header class="navbar navbar-fixed-top" style="background-color: #003333">
  <div class="container">
    <%= link_to t("logo"), home_path, id: "logo" %>
    <nav>
      <div class="col-sm-3 col-md-3">
        <form class="navbar-form" role="search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder=<%= t("search") %> name="q">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), home_path %></li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("book"), admin_books_path %></li>
            <li><%= link_to t("user"), admin_users_path %></li>
          <% else %>
            <li><%= link_to t("book"), books_path %></li>
            <li><%= link_to t("user"), users_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("signup"), signup_path %></li>
          <li><%= link_to t("login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
